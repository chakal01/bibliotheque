%table.table.centree-mini
  - if user_signed_in?
    = bootstrap_form_for @emplacement do |f|
      %tr
        %td
          = f.text_field :nom, placeholder: "Nouvel emplacement", hide_label: :true
        %td
          %button.btn.xs
            %span.glyphicon.glyphicon-plus
  - @emplacements.each_with_index do |emplacement, index|
    %tr   
      %td{colspan: 2}
        = link_to emplacement.nom, emplacement
