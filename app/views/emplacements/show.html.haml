%table.table.centree
  %tr
    %td
      .titre.pull-left
        = @emplacement.nom
        
      = button_to 'Listes des Emplacements', emplacements_path, method: :get, class: "btn pull-right", style: "margin-left: 20px;"
      - if user_signed_in?
        = button_to 'Supprimer', emplacement_path(@emplacement), method: :delete, class: "btn pull-right", style: "margin-left: 20px;", data: {confirm: 'Are you sure?' }
        = button_to 'Modifier', edit_emplacement_path(@emplacement), method: :get, class: "btn pull-right"

  %tr
    %td
